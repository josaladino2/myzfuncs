settabcolor () {
#	CheckUser=$(echo ${USER} | tr '[:upper:]' '[:lower:]')
CheckUser=$(echo ${1:-${USER}} | tr '[:upper:]' '[:lower:]')
	case ${CheckUser} in
		root)	tabcolor red
		 ;;
    cissa)	tabcolor pink
		 ;;
    joe)	tabcolor blue
		 ;;
    tim)	tabcolor orange
		 ;;
		y4x) tabcolor purple
		 ;;
		elton) tabcolor green
		 ;;
		 *)	tabcolor gray
		 ;;
	esac
}
