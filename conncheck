conncheck () {
	netstat -ntu | awk '{print $5}' | egrep -v 'Address|servers|127\.0\.0\.1|^159.118'| cut -d: -f1 | \
		sort | uniq -c | sort -n | \
		while read num ipadd; do
			printf "$num	$ipadd"
			printf ", $(whois $ipadd|egrep '[C|c]ountry:'|sed -e 's/^[C|c]ountry: *//'|head -n1), "
			echo "$(coco $(whois $ipadd|egrep '[C|c]ountry:'|sed -e 's/^[C|c]ountry: *//'|head -n1))"
		done
}
